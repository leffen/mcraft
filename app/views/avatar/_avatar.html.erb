<li class="item">
  <figure>
    <div class="view">
      <%= image_tag(avatar.image_url) %>
    </div>
    <figcaption>
      <p><span> <%= link_to "edit", edit_avatar_path(avatar) %></span></p>
      <p><span> <%= link_to "remove", avatar, data:{:confirm => 'Are you sure?'}, :method => :delete %></span></p>
    </figcaption>
  </figure>
  <div class="avatar_name"><%= avatar.name %></div>
</li>



