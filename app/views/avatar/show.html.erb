<div class="container-fluid top_container">
  <div class="row">
    <div class="span12" id="gallery">

      <h1><%= @avatar.name %></h1>

      <p><%= image_tag @avatar.image_url %></p>

      <p>
        <%= link_to "Endre", edit_avatar_path(@avatar) %> |
        <%= link_to "Slett", @avatar, :confirm => 'Er du sikker?', :method => :delete %> |
        <%= link_to "Tilbake til avatar liste", avatar_index_path %>
      </p>

    </div>
  </div>
</div>
