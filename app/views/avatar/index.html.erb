<div class="container-fluid top_container">
  <% if current_user %>
      <div class="row-fluid">
        <div class="span12" id="new_image">

          <%= direct_upload_form_for @uploader do |f| %>
              <Strong>Ny avatar:</strong> <%= f.file_field :image, :label => 'Velg fil' %>
              <input id="Content-Type" name="Content-Type" type="hidden" value="image/jpeg">
                <%= f.submit "Opprett avtar" %>
          <% end %>

        </div>
      </div>
  <% end %>

  <div class="row-fluid">
    <div class="span12" id="gallery">
      <h1>Avatar Gallery</h1>

      <div class="demo-wrapper">
        <ul class="avtar_items">
          <%= render partial: "avatar", collection: @avatars %>
        </ul>
      </div>
    </div>

  </div>
</div>
